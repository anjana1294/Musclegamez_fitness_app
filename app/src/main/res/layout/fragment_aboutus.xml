<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:fillViewport="true"
    android:id="@+id/about_layout"
    android:fitsSystemWindows="true"
    android:overScrollMode="always"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/background_dialog"
            app:cardBackgroundColor="@color/colorBlack"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_about"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/about_us"
                        android:textColor="@color/colorSearchBar"
                        android:textSize="18sp"
                        />

                    <ImageView
                        android:id="@+id/iv_about_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/arrow_right"></ImageView>
                    <ImageView
                        android:id="@+id/iv_first_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:visibility="gone"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/ic_arrow_down"></ImageView>

                </RelativeLayout>

                <!--                <LinearLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:orientation="vertical">-->

                <TextView
                    android:id="@+id/tv_about_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    android:visibility="gone"
                    android:text="@string/dummy"
                    android:textColor="@color/colorSearchBar"
                    android:textSize="14sp"
                    ></TextView>
                >
                <!--                </LinearLayout>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardElevation="12dp"
            android:background="@drawable/background_dialog"
            app:cardBackgroundColor="@color/colorBlack">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/rl_terms"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/terms_condition"
                        android:textColor="@color/colorSearchBar"
                        android:textSize="18sp"
                        />

                    <ImageView
                        android:id="@+id/iv_term_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/arrow_right"></ImageView>
                    <ImageView
                        android:id="@+id/iv_second_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:visibility="gone"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/ic_arrow_down"></ImageView>

                </RelativeLayout>

                <!--                <LinearLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:orientation="vertical">-->

                <TextView
                    android:id="@+id/tv_terms_dec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_about"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:text="@string/dummy"
                    android:textColor="@color/colorSearchBar"
                    android:textSize="14sp"
                    ></TextView>
                >
                <!--                </LinearLayout>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardElevation="12dp"
            android:background="@drawable/background_dialog"
            app:cardBackgroundColor="@color/colorBlack">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/rl_feedback"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_legal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/leave_a_feedback"
                        android:textColor="@color/colorSearchBar"
                        android:textSize="18sp"
                      />

                    <ImageView
                        android:id="@+id/tv_legal_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/arrow_right"></ImageView>

                    <ImageView
                        android:id="@+id/iv_third_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dp"
                        android:visibility="gone"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/ic_arrow_down"></ImageView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/ll_desc"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tv_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/tv_about"
                        android:background="@drawable/background_feedback"
                        android:gravity="start"
                        android:hint="@string/please_write_feedback"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLines="8"
                        android:padding="4dp"
                        android:scrollHorizontally="false"
                        android:text=""
                        android:textColor="@color/colorSearchBar"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="14sp"
                        android:textStyle="bold"></EditText>

                    <Button
                        android:id="@+id/btn_feedback_submit"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_red"
                        android:padding="8dp"
                        android:text="@string/submit"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"></Button>
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="invisible"
                        tools:visibility="visible" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>